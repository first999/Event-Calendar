<p id="notice"><%= notice %></p>

<h1>Listing Invites</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Name</th>
      <th>Attending</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.event.title %></td>
        <td><%= invite.user.full_name %></td>
        <td><%= invite.attending %></td>
        <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

